#!/usr/bin/env ruby

puts ARGV.join(' ').codepoints.map { |cp|
  if ('A'..'Z').flat_map(&:codepoints).include?(cp)
    cp + 'ğ˜¼'.codepoints.first - 'A'.codepoints.first
  elsif ('a'..'z').flat_map(&:codepoints).include?(cp)
    cp + 'ğ—®'.codepoints.first - 'a'.codepoints.first
  else
    cp
  end
}.pack('U*')
