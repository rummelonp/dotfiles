[user]
  name  = Kazuya Takeshima
  email = mail@mitukiii.jp
[core]
  excludesfile = ~/.gitignore
  pager        = less
  autocrlf     = input
  quotepath    = false
[init]
  defaultBranch = master
[color]
  ui = auto
[color "diff"]
  plain      = normal
  meta       = bold green
  frag       = bold blue
  func       = bold magenta
  old        = bold red
  new        = bold cyan
  commit     = bold yellow
  whitespace = normal magenta
[help]
  autocorrect = 1
[log]
  date = iso
[pretty]
  colorful = %C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %C(cyan)%an%C(reset) %s %C(auto)%d%C(reset)
[merge]
  ff = false
[fetch]
  prune = true
[pull]
  rebase = true
[push]
  default = simple
[alias]
  # status
  s  = status --short
  st = status
  # show
  sh  = show --ignore-all-space
  shw = show --word-diff
  shs = show --stat
  shn = show --name-only
  sha = show --diff-filter=A
  shm = show --diff-filter=M
  # add
  a  = add
  aa = add --all
  ap = add --patch
  au = add --update
  # commit
  c    = commit
  ca   = commit --all
  cam  = commit --amend
  caam = commit --all --amend
  # cherry-pick
  cp  = cherry-pick
  cpn = cherry-pick --no-commit
  # checkout
  co  = checkout
  cob = checkout -b
  cod = checkout develop
  com = checkout master
  # rebase
  rb  = rebase
  rbm = rebase master
  rbd = rebase develop
  rbr = rebase release
  rbi = rebase --interactive
  rbo = rebase --onto
  rbc = rebase --continue
  rbs = rebase --skip
  rba = rebase --abort
  # reset
  rs   = reset
  rss  = reset --soft
  rssh = reset --soft HEAD^
  rsh  = reset --hard
  rshh = reset --hard HEAD^
  # merge
  m  = merge
  mf = merge --ff
  mn = merge --no-ff
  ms = merge --squash
  # branch
  b   = branch
  bm  = branch --move
  bd  = branch --delete
  br  = branch --no-merged
  brv = branch -vv --no-merged
  # fetch
  f   = fetch
  fa  = fetch --all
  # pull
  pl  = pull
  plf = pull --ff
  pln = pull --no-ff
  plr = pull --rebase
  # push
  ps  = push
  psf = push --force
  psu = push --set-upstream
  pst = push --tags
  psm = push --mirror
  # log
  l   = log --graph --stat --name-status
  la  = log --graph --stat --patch
  law = log --graph --stat --patch --word-diff
  ll  = log --graph --pretty=colorful
  lla = log --graph --pretty=colorful --all
  # diff
  d    = diff --ignore-all-space
  dw   = diff --word-diff
  dc   = diff --cached --ignore-all-space
  dcw  = diff --cached --word-diff
  dd   = diff develop --ignore-all-space
  ddw  = diff develop --word-diff
  dod  = diff origin/develop --ignore-all-space
  dodw = diff origin/develop --word-diff
  dm   = diff master --ignore-all-space
  dmw  = diff master --word-diff
  dom  = diff origin/master --ignore-all-space
  domw = diff origin/master --word-diff
  du   = diff --name-only --diff-filter=U
  # submodule
  sm = submodule
  # grep
  gr   = grep --line-number
  gri  = grep --line-number --ignore-case
  grl  = grep --files-with-matches
  gril = grep --ignore-case --files-with-matches
  grli = grep --ignore-case --files-with-matches
  # update-index
  skip   = update-index --skip-worktree
  noskip = update-index --no-skip-worktree
  # sh
  skip-files= "!f() { git ls-files -v | grep '^S' | awk '{ print $2 }'; }; f"
  log-files = "!f() { git log $1..$2 --name-only --oneline | grep --invert-match ' ' | sort --unique; }; f"
  grep-sed  = "!f() { git grep --files-with-matches \"$1\" $3 | xargs sed -i \"s/$1/$2/g\"; }; f"
  pshow     = "!f() { git log --all --pretty=colorful | percol | cut -d' ' -f1 | xargs git show; }; f;"
  preflog   = "!f() { git reflog | percol | cut -d' ' -f1 | xargs git show; }; f;"
  pls-files = "!f() { echo $(git ls-files | percol | sed 's/ /\\ /g'); }; f;"
[secrets]
	providers = git secrets --aws-provider
	patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
